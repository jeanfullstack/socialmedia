<div class="card"> {{!-- Creacion de la tarjeta --}}

    <div class="card-header bg-dark"> {{!-- card-header: Titulo de la tarjeta --}}


        <h3 class="card-title text-white">

            <i class="far fa-image"></i> Upload a Image

        </h3>



    </div>


    <div class="card-body"> {{!-- card-body --}}

        <form action="/images" method="POST" enctype="multipart/form-data"> {{!-- Creacion del formulario --}}


            <div class="form-group"> {{!-- Primer form-group --}}

                <div class="input-group">

                    <div class="custom-file">

                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>

                        <label class="custom-file-label" for="inputGroupFile">Choose file</label>

                    </div>

                </div>

            </div>


            <div class="form-group"> {{!-- Segundo form-group --}}

                <input type="text" name="title" class="form-control" placeholder="Title for the image" required>

            </div>


            <div class="form-group"> {{!-- Tercer form-group --}}

                <textarea name="description" rows="2" class="form-control" placeholder="Description for the Image"
                    required></textarea>

            </div>


            <div class="form-group"> {{!-- Cuarto form-group --}}

                <button class="btn btn-success"> {{!-- Activa el formulario --}}

                    <i class="fa fa-upload"></i> Upload Image

                </button>

            </div>






        </form>



    </div>



</div>


<div class="card mt-2"> {{!-- Creacion de la tarjeta --}}


    <div class="card-header bg-dark text-white">

        <h3><i class="far fa-images"></i> Recent Uploads</h3>

    </div>


    <div class="card-body">


        <div class="row"> {{!-- Creacion de la fila --}}

            {{#each images}}

            <div class="col-md-4"> {{!-- Creacion de la columna --}}

                <a href="/images/{{uniqueId}}">
                    
                    <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                    
                </a>

            </div>

            {{/each}}

        </div>


    </div>
    

</div>

    



